@using ToGoodToGo.Core.Models.Domains;

@model IEnumerable<FoodPackage>
@{
}


<div id="foodPackagesTable">
    <table class="table mt-0">
        <thead class="thead-dark bg-secondary text-white">
            <tr>
                <th scope="col">&nbsp;</th>
                <th scope="col">Restauracja</th>
                <th scope="col">Adres</th>
                <th scope="col">Tytuł</th>
                <th scope="col">Cena</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody class="bg-primary text-white">
            @if (Model != null && Model.Any())
            {
                
                foreach (var foodPackage in Model)
                {
                   <tr> 
                        <td>
                            <img src="images/@foodPackage.ImagePath" class="thunbnail" />
                        </td>
                        <td>
                            @foodPackage.Restaurant.RestaurantName
                        </td>
                        <td>
                            @foodPackage.Restaurant.City, ul. @foodPackage.Restaurant.Street
                        </td>
                        <td>
                            <strong>@foodPackage.Title</strong>
                        </td>
                        <td>
                            @foodPackage.Price
                        </td>
                        <td>
                            <button class="btn btn-secondary btn-sm mb-3 buttonEditDelete" onclick='window.location.href="@Url.Action("FoodPackage", "Client", new { id = foodPackage.Id })"'>
                                Szczegóły
                            </button>
                        </td> 
                   </tr>
                }    
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="5">
                        Niestety na tą chwilę nie znaleziono żadnych dostępnych dla Ciebie paczek z żywnością.
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>