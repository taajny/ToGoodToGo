@using ToGoodToGo.Core.Models.Domains;

@model IEnumerable<FoodPackage>
@{
}

<div id="foodPackagesTable">
    <table class="table mt-0">
        <thead class="thead-dark bg-secondary text-white">
             <tr>
                <th scope="col">&nbsp;</th>
                <th scope="col">Tytuł</th>
                <th scope="col">Opis</th>
                <th scope="col">Cena</th>
                <th scope="col">Data utworzenia</th>
                <th scope="col">Data ważności</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody class="bg-primary text-white">
            @if (Model != null && Model.Any())
            {
                foreach(var foodPackage in Model)
                {
                    <tr>
                        <td>
                            <img src="images/@foodPackage.ImagePath" class="thunbnail" />
                        </td>
                        <td>
                            <strong>@foodPackage.Title</strong>
                        </td>
                        <td>
                            @foodPackage.Descrirption
                        </td>
                        <td>
                            @foodPackage.Price
                        </td>
                        <td>
                            @foodPackage.DateOfCreation.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @foodPackage.ExpirationDate.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            <button class="btn btn-secondary btn-sm mb-3 buttonEditDelete" onclick='window.location.href=" @Url.Action("FoodPackage", "Restaurant", new { id = foodPackage.Id })"'>
                                Edytuj
                            </button>
                            <button class="btn btn-secondary btn-sm mb-3 buttonEditDelete" onclick="deleteFoodPackage('@foodPackage.Id', this)">
                                Usuń
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="5">
                        W bazie danych nie znaleziono żadnych paczek z żywnością.
                    </td>
                </tr>
    
            }
        </tbody>
    </table>
</div>